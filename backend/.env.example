# Nome da aplicação
APP_NAME=CareFlow Auth API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production


# SEGURANÇA JWT
SECRET_KEY=sua_chave_secreta_

# Algoritmo de assinatura JWT
ALGORITHM=HS256

# Tempo de expiração do token (em minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

ALLOWED_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

TIMEZONE=America/Sao_Paulo

# CONFIGURAÇÕES DO SERVIDOR
PORT=80
HOST=0.0.0.0
WORKERS=5
TIMEOUT=60

# Banco de dados
DATABASE_URL=mysql+pymysql://seu_usuario:senha_forte_aqui@localhost:3306/database_name

# Opção 2: Configurações individuais (usado se DATABASE_URL estiver vazio)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=careflow_procedimentos
DB_USER=careflow_user
DB_PASSWORD=sua_senha_forte_aqui

# Tamanho do pool de conexões
DB_POOL_SIZE=10

# Máximo de conexões extras (overflow)
DB_MAX_OVERFLOW=20

# Timeout para obter conexão do pool (segundos)
DB_POOL_TIMEOUT=30

# Reciclagem de conexões (segundos)
DB_POOL_RECYCLE=3600

